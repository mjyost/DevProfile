<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/imageView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="fitCenter"
            android:background="?android:attr/textColorLink" android:contentDescription="@string/banner"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="108dp"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription="@string/logo"/>
    <TextView
            android:text="@string/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="30sp" app:layout_constraintStart_toEndOf="@+id/logo"
            android:layout_marginStart="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView9"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/imageView18"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.9" app:layout_constraintEnd_toStartOf="@+id/imageView19"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView9"
            app:layout_constraintHorizontal_chainStyle="packed" android:contentDescription="@string/camerapic"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/imageView19"
            app:layout_constraintStart_toEndOf="@+id/imageView18" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView20" app:layout_constraintTop_toTopOf="@+id/imageView18"
            app:layout_constraintBottom_toBottomOf="@+id/imageView18" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" app:layout_constraintVertical_bias="0.0"
            android:contentDescription="@string/favoritespic"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/imageView20"
            app:layout_constraintStart_toEndOf="@+id/imageView19"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/imageView19"
            app:layout_constraintBottom_toBottomOf="@+id/imageView19" app:layout_constraintVertical_bias="0.0"
            android:contentDescription="@string/inboxpic"/>
    <Button
            android:text="@string/customize_dashboard"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" android:background="@drawable/rounded_gradient"
            style="@style/Widget.AppCompat.Button.Borderless" android:textColor="@android:color/white"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView17" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/logo" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/imageView22"
            app:layout_constraintDimensionRatio="16:9" android:layout_marginEnd="16dp"
            android:contentDescription="@string/codepic"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView21"
            app:layout_constraintTop_toTopOf="@+id/imageView17" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginStart="16dp" app:layout_constraintDimensionRatio="16:9"
            android:contentDescription="@string/datapic"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView22"
            app:layout_constraintTop_toBottomOf="@+id/imageView17" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="16dp" app:layout_constraintDimensionRatio="16:9"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:contentDescription="@string/picturespic"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView23" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView21"
            app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView21" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.832" app:layout_constraintDimensionRatio="16:9"
            android:contentDescription="@string/videospic"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
</android.support.constraint.ConstraintLayout>